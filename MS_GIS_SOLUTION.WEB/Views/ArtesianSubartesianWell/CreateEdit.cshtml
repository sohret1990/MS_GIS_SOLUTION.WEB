                .Key("Attachmentid").LoadParams(new { RelGlobalId = Model.GlobalId }))
                .Columns(c => {
                    c.Add().DataField("AttName").Caption("Faylın adı");
                    c.Add().DataField("ContentType").Caption("Faylın tipi").CellTemplate(new JS("cellTemplateReplace"));
