@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Şifrəmi unutdum";

}



<div class="row vh-100 ">
    <div class="col-12 align-self-center">
        <div class="auth-page">
            <div class="card auth-card shadow-lg">
                <div class="card-body">
                    <div class="px-3">
                        <div class="auth-logo-box">
                            <a href="/" class="logo logo-admin"><img src="/Content/assets/images/logo-mscis.png" height="55" alt="logo" class="auth-logo"></a>
                        </div><!--end auth-logo-box-->

                        <div class="text-center auth-logo-text">
                            <h4 class="mt-0 mb-3 mt-5">@ViewData["FormTitle"]</h4>

                            @if (ViewData["ErrorMessage"] != null)
                            {
                                <p class="text-@ViewData["StatusClass"] mb-0">@ViewData["ErrorMessage"]</p>
                            }
                            @*Təlimatlar daxil etdiyiniz e-poçt ünvaına göndəriləcəkdir!*@
                        </div> <!--end auth-logo-text-->

                        @if (ViewData["HideForm"] == null)
                        {
                            <form class="form-horizontal auth-form my-4 form-parsley" asp-controller="Users" asp-action="ForgotPassword" asp-antiforgery="true" method="post">

                                <input name="requestType" type="hidden" value="@(ViewData["ConfirmForgotPassword"] == null?1:2)" />

                                @if (ViewData["ConfirmForgotPassword"] == null)
                                {
                                    <div class="form-group">
                                        @*<label for="useremail">E-poçt</label>*@
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-mail"></i>
                                            </span>
                                            <input data-parsley-errors-container="" type="email" class="form-control" required data-parsley-required-message="*" name="mailOrSecurityCode" id="useremail" placeholder="E-poçtunuzu daxil edin">
                                        </div>
                                    </div><!--end form-group-->
                                }
                                else
                                {
                                    <div class="form-group">
                                        @*<label for="securitycode">Kod</label>*@
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-card"></i>
                                            </span>
                                            <input type="text" class="form-control" required data-parsley-required-message="*" name="mailOrSecurityCode" id="securitycode" placeholder="Təhlükəsizlik kodunu daxil edin">
                                        </div>
                                    </div><!--end form-group-->
                                }

                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2">
                                        <button class="btn btn-gradient-primary btn-round btn-block waves-effect waves-light" type="submit">@(ViewData["ConfirmForgotPassword"] == null?"Göndər":"Təsdiqlə") <i class="fas fa-sign-in-alt ml-1"></i></button>
                                    </div><!--end col-->
                                </div> <!--end form-group-->
                            </form><!--end form-->
                        }
                    </div><!--end /div-->

                    <div class="m-3 text-center text-muted">
                        <p class="">Şifrənizi xatırlayırsız ?  <a asp-action="Login" asp-controller="Account" class="text-primary ml-2">Daxil ol</a></p>
                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end auth-page-->
    </div><!--end col-->
</div><!--end row-->